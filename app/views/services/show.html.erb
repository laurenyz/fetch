<h1>Service: <%=@service.name.capitalize %></h1>

<h2>Description: <%=@service.description%></h2>
<h2>Cost: <%=number_to_currency(@service.price)%></h2>

<h4><%= link_to "Edit this Service", edit_service_path%></h4>
<h4><%= link_to "Return to Services", services_path%></h4>

<%= form_tag(service_path(@service), method: :delete) do %>
    <div>
    <%= submit_tag "Delete this Service" %>
    </div>
<% end %>