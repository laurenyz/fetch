<div class="page-body services-background">
    <h1 class="page-title">Service: <%=@service.name.capitalize %></h1>

    <h3>Description: <%=@service.description%></h3>
    <h3>Cost: <%=number_to_currency(@service.price)%></h3>

    <h3><%= link_to "Edit this Service", edit_service_path%></h3>
    <h3><%= link_to "Return to Services", services_path%></h3>

    <%= form_tag(service_path(@service), method: :delete) do %>
        <div>
        <%= submit_tag "Delete this Service" %>
        </div>
    <% end %>
</div>