<%= form_for @user do |f| %>
    <div>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :username, "Username:" %>
        <%= f.text_field :username %>
    </div>
    <div>
    <%= f.label :address, "Address:"%>
    <%= f.text_area :address %>
    </div>
    <div>
    <%=f.label :location %>
    <%= f.collection_select :location_id, Location.all, :id, :city %>
    </div>
    <%= f.submit %>
<% end %>