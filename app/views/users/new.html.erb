<h1>Create a User Profile</h1>

<% if @user.errors %>
<ul class = "error_list" %>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
    </div>
    <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </div>
    <div>
    <%= f.label :address%>
    <%= f.text_area :address %>
    </div>
    <div>
    <%=f.label :location %>
    <%= f.collection_select :location_id, Location.all, :id, :city %>
    </div>
    <%= f.submit %>
<% end %>