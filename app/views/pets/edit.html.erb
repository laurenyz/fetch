<div class="page-body edit-background">
    <div class="page-body pet-form profile-box">
    <h1 class="page-title">Edit <%=@pet.name%>'s Profile</h1>

    <%= form_for @pet, html: {class: 'ui form'}  do |f| %>
    <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <div class="field">
    <%= f.label :species %>
    <%= f.text_field :species %>
    </div>
    <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
    </div>
    <div class="field">
    <%= f.label :description, "Additional Information" %>
    <%= f.text_area :description %>
    </div>
    <button class="ui button" type="submit">Update Pet Profile</button>
<% end %>
</div>
</div>