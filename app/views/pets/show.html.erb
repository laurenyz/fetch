<h1><%=@pet.name%>'s Profile</h1>

<h2>Species: <%=@pet.species%></h2>
<h2>Age: <%=@pet.age%></h2>
<h2>Bio: <%=@pet.description%></h2>
<h2>Owner: <%=@pet.user.username%></h2>

<%= link_to "Edit this Pet", edit_pet_path(@pet)%>

<%= form_tag(pet_path(@pet), method: :delete) do %>
<div>
    <%= submit_tag "Remove this Pet Profile" %>
</div>
<% end %>