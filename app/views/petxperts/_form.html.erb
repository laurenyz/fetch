<%= form_for @petxpert do |f| %>
    <div>
    <%= f.label :name%>
    <%= f.text_field :name %>
    </div>
    <div>
    <%= f.label :username%>
    <%= f.text_field :username %>
    </div>
    <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </div>
    <div>
    <%= f.label :description, "About Me"%>
    <%= f.text_area :description %>
    </div>
    <div>
    <%= f.label :location %>
    <%= f.collection_select :location_id, Location.all, :id, :city %>
    </div>
    <div>
    <%= f.label :services %>
    <%= f.collection_check_boxes :service_ids, Service.all, :id, :name%>
    </div>
    <%= f.submit %>
<% end %>