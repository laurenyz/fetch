<% if @location.city == "Washington, DC" %>
<div class="wash-photo">
<% elsif @location.city == "New York, NY" %>
<div class="nyc-photo">
<% elsif @location.city == "Buffalo, NY" %>
<div class="buff-photo">
<% else %>
<div class="loc-default-background">
<% end %>

    <div class="page-body">
            
        <h1 class="page-title"><%=@location.city%></h1>

        <h2>Available Services:</h2>
        <ul>
        <% @location.services.uniq.each do |service|%>
        <li><%= link_to service.cap_service_name, service_path(service) %></li>
        <% end %>
        </ul>

        <h2>Available PetXperts:</h2>
        <ul>
        <% @location.petxperts.each do |petxpert|%>
        <li><%= link_to petxpert.name, petxpert_path(petxpert) %></li>
        <% end %>
        </ul>
    </div>
</div>