<!DOCTYPE html>
<html>
  <head>
    <title>Fetch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
  </head>

  <body>

    <div class="ui secondary menu">
    
      <span><%= link_to "Home", homepage_path %></span>
      <span><%= link_to "Cities", locations_path%></span>

      <div class="right menu">
        
          <div>
            <% if session[:user_id]%>
              <span><%= link_to "My Account", user_path(session[:user_id])%></span>
              <span><%= link_to "Logout", logout_path %></span>
            <% elsif session[:petxpert_id]%>
              <span><%= link_to "My Account", petxpert_path(session[:petxpert_id])%></span>
              <span><%= link_to "Logout", logout_path %></span>
            <% else %>
              <span><%= link_to "Pet Owner Login", user_login_path %></span>
              <span><%= link_to "PetXpert Login", petxpert_login_path%></span>
          <% end %>
            </div>   
      </div>
    </div>
  
 
    
   
    
  <div>
    <% if flash[:warning1]%>
      <div class = "warning"><%= flash[:warning1]%></div>
    <% end %>
    <% if flash[:warning2]%>
      <div class = "warning"><%= flash[:warning2]%></div>
    <% end %>
  </div>  
  
    <%= yield %>
  </body>
</html>
